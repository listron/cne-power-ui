{
  "plugins": [
    "react",
    "redux-saga",
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "globalReturn": true, // 允许在全局作用域下使用 return 语句
      "impliedStrict": true, // impliedStric
      "jsx": true, // 启用 JSX
      "modules": true
    }
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "forOf": false
  },
  "env": {
    "node": true,
    "browser": true,
    "amd": true,
    "es6": true,
    "mocha":true,
    "jasmine":true
  },
  "globals": {
    "I18N": true,
    "AMap":true,
    "_czc": true
   },
  "rules": {
    "accessor-pairs": 2,
    "array-bracket-spacing": [2, "never"],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "camelcase":1,
    "comma-spacing": [1, { "before": false, "after": true }],
    "comma-style": [1, "last"],
    "comma-dangle": [1, "always-multiline"],
    "dot-location": [2, "property"],
    "dot-notation":0,
    "eol-last": 1,
    "eqeqeq":1,
    "global-strict": 0,
    "handle-callback-err":0,
    "key-spacing": [1, { "beforeColon": false, "afterColon": true }],
    "new-cap": 2,
    "no-empty":1,
    "no-undef": 1,
    "no-alert":0,
    "no-loop-func":1,
    "no-redeclare": 1,
    "no-spaced-func": 1,
    "no-self-compare": 1,
    "no-var": 0,
    "no-extra-semi": 1,
    "no-underscore-dangle": 0,
    "no-trailing-spaces":1,
    "no-const-assign": 2,
    "no-multi-spaces":1,
    "no-dupe-keys": 2,
    "no-dupe-args": 2,
    "no-lonely-if": 2,
    "no-else-return": 2,
    "no-mixed-spaces-and-tabs":0,
    "no-return-assign": 2,
    "no-unused-vars":[1, {"vars": "all", "args": "none"}],
    "prefer-const": 2,
    "quotes": [1, "single"],
    "radix": 2,
    "space-infix-ops":0,
    "semi": [2, "always"],
    "semi-spacing": [1, {"before": false, "after": true}],
    "react/display-name": 0,
    "react/jsx-boolean-value": 0,
    "react/jsx-curly-spacing": 0,
    "react/jsx-no-undef": 1,
    "jsx-quotes": [1, "prefer-double"],
    "react/jsx-sort-prop-types": 0,
    "react/jsx-sort-props": 0,
    "react/jsx-tag-spacing": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/jsx-wrap-multilines": 1,
    "react/jsx-no-bind": [1, {
      "ignoreRefs": true,
      "allowArrowFunctions": true,
      "allowBind": false
    }],
    "react/no-unused-state": 1,
    "react/no-unused-prop-types": 1,
    "react/no-danger": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-multi-comp": [0, { "ignoreStateless": true }],
    "react/no-unknown-property": 1,
    "react/prop-types": 1,
    "react/prefer-es6-class": [1, "always"],
    "react/react-in-jsx-scope": 1,
    "react/require-render-return": 1,
    "react/self-closing-comp": 0,
    "react/sort-comp": [1, {
      "order": [
        "static-methods",
        "instance-variables",
        "lifecycle",
        "getters",
        "setters",
        "instance-methods",
        "everything-else",
        "rendering"
      ],
      "groups": {
        "lifecycle":[
          "displayName",
          "propTypes",
          "contextTypes",
          "childContextTypes",
          "mixins",
          "statics",
          "defaultProps",
          "constructor",
          "getDefaultProps",
          "getInitialState",
          "state",
          "getChildContext",
          "componentWillMount",
          "componentDidMount",
          "componentWillReceiveProps",
          "shouldComponentUpdate",
          "componentWillUpdate",
          "componentDidUpdate",
          "componentWillUnmount"
        ],
        "rendering": [
          "/^render.+$/",
          "render"
      ]}
    }]
  }
}
